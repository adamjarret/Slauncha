<UserControl x:Class="Slauncha.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300">
    <Grid>
        <CheckBox Height="16" Margin="12,0,12,12" Name="checkBox1" VerticalAlignment="Bottom" BorderThickness="0" Checked="checkBox1_Toggle" Unchecked="checkBox1_Toggle">Hide menu window border and control buttons</CheckBox>
        <ListBox Margin="12,37,12,79" Name="listBox1" AllowDrop="True" SelectionChanged="listBox1_SelectionChanged">
            <ListBox.ItemBindingGroup>
                <BindingGroup Name="{x:Null}" NotifyOnValidationError="False" />
            </ListBox.ItemBindingGroup>
        </ListBox>
        <Button Height="23" HorizontalAlignment="Left" Margin="12,0,0,50" Name="button1" VerticalAlignment="Bottom" Width="23" Click="button1_Click" FontWeight="Normal" FontFamily="Arial" FontSize="13">+</Button>
        <Button Height="23" Margin="41,0,0,50" Name="button2" VerticalAlignment="Bottom" Click="button2_Click" FontSize="15" FontWeight="Normal" FontFamily="Arial" HorizontalAlignment="Left" Width="24">-</Button>
        <Label Height="28" Margin="12,8,0,0" Name="label1" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="120">Games</Label>
    </Grid>
</UserControl>
